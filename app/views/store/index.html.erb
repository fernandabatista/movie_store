
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Compre os melhores filmes!</h1>
    <p class="lead text-muted">Porque sua internet será limitada um dia!</p>
    <p>
      <% if user_signed_in? %>
        Olá <strong><%= current_user.email %></strong>!
      <% else %>
        <%= link_to "Faça seu cadastro", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Já sou usuário", new_user_session_path, class: "btn btn-secondary" %>
      <% end %>
    </p>
  </div>
</section>


<div class="container">
  <h2>Alguns dos nossos melhores filmes ...</h2>

  <%= render partial: "movies/movies", locals: {movies: @movies} %>
</div>
